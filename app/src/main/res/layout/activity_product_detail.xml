<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.product.ProductDetailActivity">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/product" />

    <TextView
        android:id="@+id/tv_nameproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Ten san pham"
        android:textColor="#1C1C1C"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_priceproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="20000đ"
        android:textColor="@color/babypink"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_margin="15dp"
        android:text="Mô tả"
        android:textColor="#444444" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Có sẵn:"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="10"
            android:textSize="14dp"
            android:textColor="@color/purple_200"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="sản phẩm"
            android:textSize="14dp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_decrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#DADADA"
                tools:layout_editor_absoluteX="204dp"
                tools:layout_editor_absoluteY="101dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_baseline_remove_24" />

            </androidx.cardview.widget.CardView>


            <EditText
                android:id="@+id/et_quantity"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:background="@drawable/my_edittext_number"
                android:ems="10"
                android:gravity="center"
                android:inputType="none|numberPassword"
                android:minEms="0"
                android:padding="1dp"
                android:textSize="12dp"
                tools:layout_editor_absoluteX="225dp"
                tools:layout_editor_absoluteY="101dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#DADADA"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#DADADA"
                tools:layout_editor_absoluteX="249dp"
                tools:layout_editor_absoluteY="101dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_baseline_add_24" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <Button
            android:id="@+id/btn_add_to_cart"
            android:layout_width="247dp"
            android:layout_height="51dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/my_button"
            android:text="@string/add_to_cart"
            android:textColor="#FAFAFA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>