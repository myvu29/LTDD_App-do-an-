<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.login.CodeActivity">


    <ImageView
        android:id="@+id/iv_forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:padding="10dp"
        android:src="@drawable/forgot_password" />

    <TextView
        android:id="@+id/tv_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingLeft="5dp"
        android:text="Enter your code"
        android:textSize="20dp"
        android:textColor="#A35161"/>

    <EditText
        android:id="@+id/et_code"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/my_edittext"
        android:ems="16"
        android:hint="Your code"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:paddingRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp"
        android:gravity="center">

<!--        <Button-->
<!--            android:id="@+id/btn_back"-->
<!--            android:layout_width="120dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginRight="10dp"-->
<!--            android:background="@drawable/my_button_back"-->
<!--            android:text="Back"-->
<!--            android:textSize="20dp"-->
<!--            app:backgroundTint="@null" />-->

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/my_button"
            android:text="submit"
            android:textSize="20dp"
            app:backgroundTint="@null"/>

    </LinearLayout>

</LinearLayout>