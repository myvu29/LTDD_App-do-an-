<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.ChangePasswordActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/babypink"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:logo="@drawable/ic_baseline_arrow_back_24"
        app:title="Change Password"
        app:titleTextColor="@color/white" />

    <EditText
        android:id="@+id/et_oldpassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:ems="16"
        android:inputType="textPassword"
        android:hint="Old Password"
        android:background="@drawable/my_edittext"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        />

    <EditText
        android:id="@+id/et_newpassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:ems="16"
        android:inputType="textPassword"
        android:hint="New Password"
        android:background="@drawable/my_edittext"
        android:layout_margin="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"/>

    <EditText
        android:id="@+id/et_confirmnewpassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:ems="16"
        android:inputType="textPassword"
        android:hint="Confirm New Password"
        android:background="@drawable/my_edittext"
        android:layout_margin="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"/>

    <Button
        android:id="@+id/btn_confirmchangepass"
        android:layout_width="150dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/my_button"
        android:text="confirm"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:backgroundTint="@null" />

</LinearLayout>